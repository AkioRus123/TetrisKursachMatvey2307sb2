<Window x:Class="TetrisWithTxt.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рекорды" Height="400" Width="300">
    <Grid>
        <ListView Name="HighScoresListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя игрока" DisplayMemberBinding="{Binding PlayerName}" Width="100"/>
                    <GridViewColumn Header="Очки" DisplayMemberBinding="{Binding Score}" Width="60"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>